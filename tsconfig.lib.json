{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "umd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "outDir": "./lib"
  },
  "include": ["src/plugin.ts", "src/transpile.ts"]
}
